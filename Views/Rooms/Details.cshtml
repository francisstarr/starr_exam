@model starrexam.Models.room

@{
    ViewBag.Title = "Details";
}


<div>
    <h3>@Html.DisplayNameFor(model => model.roomNumber) @Html.DisplayFor(model => model.roomNumber)</h3>
    
    <a href="/Bookings/Create?room=@Html.DisplayFor(model=>model.roomNumber)"><button class="btn btn-success">Book Now!</button></a>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.roomNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.roomNumber)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.price)
        </dd>

    </dl>
    @if (Model.bookings.Where(x => x.ending > DateTime.Today).ToList().Count == 0)
    {
        <p>
            This room does not have future nor present bookings. Get it while you can
        </p>
    }
    else
    {

        <p>
            Here is a complete list of present or future bookings for this room. You cannot book this room during these dates.
        </p>
    }
    <table class="table table-bordered">

        <tr class="info">
            <td>
                @Html.DisplayNameFor(model => model.bookings.ToList()[0].starting)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.bookings.ToList()[0].ending)
            </td>
        </tr>

        @foreach (var item in Model.bookings.Where(x => x.ending > DateTime.Today))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.starting)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ending)
                </td>
            </tr>
        }
    </table>
</div>
<p>
 
    @Html.ActionLink("Back to Room List", "Index")
</p>
